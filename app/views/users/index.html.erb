<h1>Listing users</h1>

<table>
  <tr>
    <th>Rut</th>
    <th>Username</th>
    <th>Email</th>
    <th>Type</th>
    <th>Password hash</th>
    <th>Password salt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.rut %></td>
    <td><%= user.username %></td>    
    <td><%= user.email %></td>
    <% if user.type %>
     <td><%= user.type.type_name %></td>
    <% else %>
     <td> Omitido </td>
    <% end %>
    <td><%= user.password_hash %></td>
    <td><%= user.password_salt %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

