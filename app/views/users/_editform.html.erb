<%= form_for @user, :validate => true do |f| %>


  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  
  <span class="comentario"> Puedes omitir esto si no quieres cambiar la contraseÃ±a </span>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  
  <% if can? :create, Course %>
  <div class="field">
    <%= f.label :type_id %><br />
    <%= f.collection_select :type_id, Type.all, :id, :type_name, :prompt => false %>
  </div>

  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>

  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


