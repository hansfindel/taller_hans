<div class="post">
				<div class="bg1">
					<div class="bg2">
						<div class="bg3">
	 <% if comment.lleva_calificacion && current_user %>
   			<div class="calification">
     			Nota del comentario: <%= comment.calification %>
   			</div>
   		   <% end %> 					
	<h2 class="title"><%= link_to comment.title, comment %></h2>
		<div class="entry">
		   <p class="meta"> Posteado por <%= comment.user.username %> <br />
		    <%= comment.commented_on %> </p>
		   <% if comment.my_grade && current_user %>
   			<div class="nota">
     			<%= comment.my_grade %>
   			</div>
   		   <% end %> 
      
<div class="message">
  <div class="content">
   
  <div class="texto">
    <%= simple_format link_to comment.content, comment %>
   </div>   
   </div>
  
  <div id="label2">
  <% if current_user %>
    <%= link_to "Responder", new_comment_path(:parent_id => comment) %> 
    <% if can? :destroy, comment %> |
      <%= link_to "Destroy", comment, :confirm => "Are you sure?", :method => :delete %>
    <% end %>
  <% end %>    
  </div>

</div>

  </div>
</div>
  </div>
</div>
  </div>
