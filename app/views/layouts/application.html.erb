<!DOCTYPE html>
<html>
<head>
  <title>TallerHans</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
<div id="user_nav">
  <% if current_user %>
  	Logged in as <%= current_user_name %> | 
  	<%= link_to "Log out", logout_path%>
  <% else %>
    <%= link_to "Register", sign_up_path%>
    <%= link_to "Sign in", login_path%>
  <% end %>
</div>

<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "#{name}"%>
<% end %>


<div id="cuerpo">
<%= yield %>
</div>

</div>
</body>
</html>
